{
  "name": "quikdb-core-beta",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/quikdb/quikdb-core-beta.git",
  "author": "samsonajulor <samsonajulor@gmail.com>",
  "license": "Apache",
  "scripts": {
    "push": "bash ./push.sh",
    "start": "yarn build && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "swc src -d dist --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "test": "jest --forceExit --detectOpenHandles",
    "test:single": "yarn node --experimental-vm-modules $(yarn bin jest) $1",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "yarn lint -- --fix",
    "deploy:prod": "yarn build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yaml,sh}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@redis/client": "^1.6.0",
