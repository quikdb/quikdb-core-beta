    "jsonwebtoken": "^9.0.2",
    "ksuid": "^3.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "mongodb": "^6.8.0",
    "mongoose": "^8.5.2",
    "mongoose-lean-virtuals": "^0.9.1",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.16",
